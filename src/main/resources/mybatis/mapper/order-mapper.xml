<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace ="orderListmapper">
    <!-- 상품전체목록 조회 -->
    <select id="selectList" resultType="com.admin.order.domain.AdminOrderListVO" >
    	select * from SYSTEM.ORDERLIST
    </select>   
 
 
 	<!-- 진행상태 : 주문접수  , 결제완료  , 배송준비중 -->
 	
 	
 	
 	<select id="selectOrderState1" resultType="com.admin.order.domain.AdminOrderListVO" >
    	select * from SYSTEM.ORDERLIST where ORDER_STATE='주문접수'
    </select>  

    <select id="selectOrderState2" resultType="com.admin.order.domain.AdminOrderListVO" >
    	select * from SYSTEM.ORDERLIST where ORDER_STATE='결제완료'
    </select>
    
    <select id="selectOrderState3" resultType="com.admin.order.domain.AdminOrderListVO" >
    	select * from SYSTEM.ORDERLIST where ORDER_STATE='배송준비중'
    </select>
    
    
